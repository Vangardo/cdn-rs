# Сетевые настройки
BIND_ADDR=0.0.0.0:8080

# Путь, куда писать файлы: строго как в Python (`castom_addres`)
MEDIA_BASE_DIR=/var/www/onlihub/data/www/onlihub-media.com/

# Файл-заглушка (если нет картинки) — как в Python
NO_IMAGE_FILE=no-image-01.jpg

# Жёсткий лимит по сторонам из Python
MAX_IMAGE_SIDE=1600

# Postgres
DATABASE_URL=postgres://user:pass@localhost:5432/onlihub

# Redis
REDIS_URL=redis://127.0.0.1/

# Swagger (вкл/выкл)
SWAGGER_ENABLED=true
SWAGGER_TITLE=Onlihub Media CDN
SWAGGER_VERSION=1.0.0

# Прокси (по умолчанию выключено — как в Python закомментировано)
USE_PROXIES=false
